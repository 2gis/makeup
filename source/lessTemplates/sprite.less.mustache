// Meta info

{{#items}}
@sprite-{{name}}: {{px.x}} {{px.y}} {{px.offset_x}} {{px.offset_y}} {{px.width}} {{px.height}} {{px.total_width}} {{px.total_height}} '{{{escaped_image}}}';
{{/items}}


// Mixins

.sprite-position(@sprite) {
    @sprite-offset-x: ~`"@{sprite}".split(', ')[2]`;
    @sprite-offset-y: ~`"@{sprite}".split(', ')[3]`;
    background-position: @sprite-offset-x  @sprite-offset-y;
    }

.sprite-size(@sprite) {
    @sprite-width: ~`"@{sprite}".split(', ')[6]`;
    @sprite-height: ~`"@{sprite}".split(', ')[7]`;
    background-size: @sprite-width  @sprite-height;
    }

.sprite-image(@sprite) {
    @sprite-image: ~`"@{sprite}".split(', ')[8].slice(1, -2)`;
    background-image: url('assets/@{sprite-image}');
    }

.sprite-width(@sprite) {
    width: ~`"@{sprite}".split(', ')[4]`;
    }

.sprite-height(@sprite) {
    height: ~`"@{sprite}".split(', ')[5]`;
    }

.sprite(@sprite) {
    .sprite-image(@sprite);
    .sprite-position(@sprite);
    .sprite-size(@sprite);
    .sprite-width(@sprite);
    .sprite-height(@sprite);
    }
